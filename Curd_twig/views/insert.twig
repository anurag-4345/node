{% extends 'layout.twig' %}

{% block body %}
  <h1 class="text-info"> Enter your Details , {{title}} </h1>
<form class="m-2" action="/" method="post">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" required id="name" placeholder="enter the Name...">
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" name="email" class="form-control" required id="email"  placeholder="enter the Email...">
    </div>
  </div>
  <div class="form-group row">
    <label for="phone" class="col-sm-2 col-form-label">Phone</label>
    <div class="col-sm-10">
      <input name="phone" type="Number" class="form-control" required id="phone"  placeholder="enter the Phone...">
    </div>
  </div>
  <div class="form-group row">
    <label for="city" class="col-sm-2 col-form-label">City</label>
    <div class="col-sm-10">
      <input name="city" type="text" class="form-control" required id="city"  placeholder="enter the City...">
    </div>
  </div>
  <div class="form-group row">
    <label for="street" class="col-sm-2 col-form-label">State</label>
    <div class="col-sm-10">
      <input name="street" type="text" class="form-control" required id="street"  placeholder="enter the street...">
    </div>
  </div>
  <button class="btn btn-block btn-outline-info" >Insert</button>
</form>
</div
{% endblock %}