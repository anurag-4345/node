{% extends 'layout.twig' %}

{% block body %}
  <h1 class="text-info">{{Set.name}} update your details </h1>
<form class="m-2" action="/editer" method="post">
<input type="hidden" name="id" value="{{Set._id}}">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" name="name" required class="form-control text-white bg-success" value="{{Set.name}}" id="name" placeholder="enter the Name...">
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" name="email" value="{{Set.email}}" required class="form-control text-white bg-success" id="email"  placeholder="enter the Email...">
    </div>
  </div>
  <div class="form-group row">
    <label for="phone" class="col-sm-2 col-form-label">Phone</label>
    <div class="col-sm-10">
      <input name="phone" type="Number" value="{{Set.phone}}" required class="form-control text-white bg-success" id="phone"  placeholder="enter the Phone...">
    </div>
  </div>
  <div class="form-group row">
    <label for="city" class="col-sm-2 col-form-label">City</label>
    <div class="col-sm-10">
      <input name="city" type="text" required class="form-control text-white bg-success" value="{{Set.city}}" id="city"  placeholder="enter the City...">
    </div>
  </div>
  <div class="form-group row">
    <label for="street" class="col-sm-2 col-form-label">State</label>
    <div class="col-sm-10">
      <input name="street" type="text" required class="form-control text-white bg-success" id="street" value="{{Set.street}}" placeholder="enter the street...">
    </div>
  </div>
  <button class="btn btn-block btn-outline-info" >Insert</button>
</form>
</div
{% endblock %}